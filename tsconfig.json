{
  "include": [
    "src/**/*.ts",
    "src/**/*.d.ts",
    "src/**/*.tsx",
    "src/**/*.vue",
    "types/**/*"
  ],
  "exclude": ["dist", "node_modules"],
  "compilerOptions": {
    "jsx": "preserve",
    "lib": ["esnext", "dom"],
    "types": ["@types/node", "@dcloudio/types", "vite/client"],
    "paths": {
      "/@/*": ["src/*"],
      "/types/*": ["types/*"]
    },
    "strict": true,
    "target": "esnext",
    "module": "esnext",
    "baseUrl": "./",
    "sourceMap": true,
    "skipLibCheck": true,
    "importHelpers": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "useDefineForClassFields": true,
    "allowSyntheticDefaultImports": true,
  }
}
